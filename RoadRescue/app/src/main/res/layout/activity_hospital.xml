<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/medicalbackground"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="199dp"
        android:layout_height="77dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/lavender_border"
        android:gravity="center_vertical|center_horizontal"
        android:text="Hospital Menu"
        android:textColor="@color/black"
        android:textSize="28sp"></TextView>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="216dp"
        android:layout_height="499dp"
        android:layout_below="@+id/title"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="80dp"
        android:columnCount="1">

        <androidx.cardview.widget.CardView
            android:id="@+id/TestCard"
            android:layout_width="197dp"
            android:layout_height="147dp"
            android:layout_gravity="bottom"
            android:layout_margin="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="113dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="126dp"
                    android:layout_height="84dp"
                    android:src="@drawable/test" />

                <TextView
                    android:layout_width="128dp"
                    android:layout_height="35dp"
                    android:text="Tests"
                    android:textAlignment="center"
                    android:textColor="@color/lavender"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/DocCard"
            android:layout_width="197dp"
            android:layout_height="147dp"
            android:layout_gravity="bottom"
            android:layout_margin="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="113dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="126dp"
                    android:layout_height="84dp"
                    android:src="@drawable/doctor" />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:text="Doctors"
                    android:textAlignment="center"
                    android:textColor="@color/lavender"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/HosCard"
            android:layout_width="197dp"
            android:layout_height="147dp"
            android:layout_gravity="bottom"
            android:layout_margin="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="113dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="126dp"
                    android:layout_height="84dp"
                    android:src="@drawable/nearby_hospital" />

                <TextView
                    android:layout_width="128dp"
                    android:layout_height="35dp"
                    android:text="Nearby Hospitals"
                    android:textAlignment="center"
                    android:textColor="@color/lavender"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>
    </GridLayout>
</RelativeLayout>